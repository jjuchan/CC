<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mainpackage.example.cc.MainActivity">

    <Button
        android:id="@+id/mainBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:text="메인메뉴"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="37dp"
        android:src="@drawable/mainlogo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBtn1" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="399dp"
        android:layout_height="228dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <Button
            android:id="@+id/roomtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="강의실별 시간표" />

        <Button
            android:id="@+id/bustime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="셔틀버스 시간표" />

        <Button
            android:id="@+id/foodmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학생식당 메뉴" />

        <Button
            android:id="@+id/introBuilding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="건물 소개" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>